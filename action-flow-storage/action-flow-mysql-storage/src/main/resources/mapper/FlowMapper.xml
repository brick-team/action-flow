<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.brick.action.flow.storage.mysql.mapper.FlowMapper">

    <resultMap id="BaseResultMap" type="com.github.brick.action.flow.model.entity.Flow">
        <!--@Table flow-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="qualifier" column="qualifier" jdbcType="VARCHAR"/>
        <result property="fileName" column="file_name" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into flow(name, qualifier, file_name)
        values (#{name}, #{qualifier}, #{fileName})
    </insert>
    <select id="queryByFileName" resultMap="BaseResultMap">
        select name, qualifier, file_name from flow
        where
        <if test="fileName != null and fileName != ''">
            file_name = #{fileName}
        </if>

        <if test="fileName == null or fileName == ''">
            file_name is null
        </if>

    </select>

</mapper>