<ae>
    <params>
        <param group="a">
            <key>username</key>
            <value>username</value>
        </param>
        <param group="a">
            <key>password</key>
            <value>password</value>
        </param>
    </params>

    <apis>
        <api id="api-1" url="http://localhost:8080/login" method="post">
            <params>
                <param in="formData" name="username" require="true" param_group="a" ex="username">

                </param>
                <param in="formData" name="password" require="true" param_group="a" ex="password"></param>
            </params>
        </api>

        <api id="api-2" url="http://localhost:8080/user_info" method="get">
            <params>
                <param in="header" name="token" require="true" ex_id="e1"></param>
            </params>
        </api>

    </apis>
    <watchers>
        <watcher>
            <then></then>
            <catch></catch>
        </watcher>
    </watchers>
    <result></result>
    <extracts>
        <extract id="e1" fromAction="api-1" fromApi="api-1" el="$.token"></extract>

    </extracts>
    <flows>
        <flow id="1">
            <work id="w1" type="api" ref_id="api-2"/>
        </flow>
    </flows>
</ae>