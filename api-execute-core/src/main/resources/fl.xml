<?xml version="1.0" encoding="UTF-8"?>
<ae>
    <params>
        <param group="a">
            <key>username</key>
            <value>username</value>
        </param>

        <param group="a">
            <key>password</key>
            <value>password</value>
        </param>
    </params>
    <actions>
        <action id="login" class="com.github.huifer.LoginAction" method="login">
            <param arg_name="username" param_group="a" ex="username"/>
            <param arg_name="password" param_group="a" ex="password"></param>
        </action>
        <action id="sendPoint" class="com.github.huifer.SendPointAction"
                method="sendPoint">
            <param index="0" arg_name="uid" param_group="a" ex="username">
            </param>
            <param index="1" arg_name="point" value="10">
                <format id="f1" class="com.github.huifer.StringToIntegerFormat"></format>
            </param>
        </action>
        <action id="print" class="com.github.huifer.PrintAction">
        </action>
    </actions>
    <watchers>
        <watcher id="w1" exid="e3" type="java.lang.Integer" condition="> 10">
            <then actionId="sendPoint"/>
        </watcher>
    </watchers>

    <result>
        <key name="r1" exid="e1"/>
        <key name="r2" exid="e2"/>
    </result>

    <extracts>
        <extract id="e1" fromAction="login" el="${username}"/>
        <extract id="e2" fromAction="login" el="${login_time}"/>
        <extract id="e3" fromAction="login" el="${age}"/>
    </extracts>

    <flow>
        <work id="work1" type="action" ref_id="login">
            <then>
                <work id="work2" type="watcher" ref_id="w1"/>
            </then>
        </work>
    </flow>

</ae>